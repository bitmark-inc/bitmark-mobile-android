<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_trans_80"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginEnd="@dimen/dp_44"
      android:layout_marginStart="@dimen/dp_44"
      android:background="@drawable/bg_white_corner"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="@dimen/dp_20"
      >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_bold"
        android:gravity="center"
        android:text="@string/preparing_to_export"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_16"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_28"
        android:indeterminateTint="@color/colorAccent"
        android:indeterminateTintMode="src_in"
        android:progressDrawable="@drawable/bg_progress_blue_ribbon"
        tools:progress="40"
        style="?android:attr/progressBarStyleHorizontal"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_28"
        android:ellipsize="end"
        android:fontFamily="@font/avenir_medium"
        android:gravity="center"
        android:maxLines="3"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_12"
        tools:text="Downloading 'very long property and need to check how the app can display it with the fit size'"
        />
  </LinearLayout>

</FrameLayout>