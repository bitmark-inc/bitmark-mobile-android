<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_trans_80"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginEnd="@dimen/dp_56"
      android:layout_marginStart="@dimen/dp_56"
      android:background="@drawable/bg_white_corner"
      android:gravity="center"
      android:orientation="vertical"
      android:paddingEnd="@dimen/dp_20"
      android:paddingStart="@dimen/dp_20"
      >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSuccess"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_36"
        app:srcCompat="@drawable/ic_success_black"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLegendMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_bold"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_17"
        android:visibility="gone"
        tools:text="Authorized!"
        tools:visibility="gone"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrimaryMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:fontFamily="@font/avenir_medium"
        android:gravity="center"
        android:maxLines="4"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_12"
        tools:text="Your rights to this property have been permanently removed from your account."
        />
  </LinearLayout>

</FrameLayout>