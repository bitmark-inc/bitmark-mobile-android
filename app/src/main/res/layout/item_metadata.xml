<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_4"
    android:paddingTop="@dimen/dp_4"
    >

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tvKey"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="0.4"
      android:ellipsize="end"
      android:fontFamily="@font/andale_regular_mono"
      android:maxLines="5"
      android:textAllCaps="true"
      android:textColor="@android:color/black"
      android:textSize="@dimen/sp_13"
      tools:text="This is very very long long long text for testing This is very very long long long text for testing This is very very long long long text for testing"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tvValue"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginStart="@dimen/dp_8"
      android:layout_weight="0.6"
      android:ellipsize="end"
      android:fontFamily="@font/avenir_light"
      android:maxLines="5"
      android:textColor="@color/dusty_gray"
      android:textSize="@dimen/sp_13"
      tools:text="This is very very long long long text for testing This is very very long long long text for testing This is very very long long long text for testing"
      />

</LinearLayout>